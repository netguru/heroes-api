generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Avatar {
  id         String @id @default(uuid())
  alt        String @default(value: "Image")
  avatar_url String
}

model Hero {
  id          String @id @default(uuid())
  full_name   String
  avatar_url  String
  description String
  type        Type   @relation(references: [id], fields: [typeId])
  typeId      String
}

model Type {
  id   String @id @default(uuid())
  name String
  hero Hero[]
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Avatar {
  id        String @id @default(uuid())
  alt       String @default(value: "Image")
  avatarUrl String
  hero      Hero[]
}

model Hero {
  id          String @id @default(uuid())
  fullName    String
  avatar      Avatar @relation(references: [id], fields: [avatarId])
  avatarId    String
  description String
  type        Type   @relation(references: [id], fields: [typeId])
  typeId      String
}

model Type {
  id   String @id @default(uuid())
  name String
  hero Hero[]
}
